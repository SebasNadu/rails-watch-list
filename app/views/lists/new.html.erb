<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3 m-auto">
      <div class="cards-bg rounded p-5 shadow">
        <h2>Create a new list</h2>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'ex: Drama' %>
          <%= f.submit class: 'btn btn-flat fs-4' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
