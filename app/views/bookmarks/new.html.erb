<div class="container py-5">
  <div class="row">
    <div class="cards-bg col-12 col-md-6 offset-lg-3">
      <div class="cards-bg rounded p-3 shadow">
        <h2>Add a movie to your <%= @list.name %> list</h2>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
          <%= f.association :movie, prompt: "Select a movie", input_html: { data: { controller: "tom-select" } } %>
          <%= f.sumbit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
